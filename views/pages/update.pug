extends ../layout


block header
    h1.uk-text-uppercase=title
    p.abstract
        | #[strong Abstract.] Git update


block content


    div.uk-section.uk-section-xsmall.uk-text-justify(class="uk-column-1-1@m")
        div=git
        each message in messages
            div=message

        hr
        
        div
            a(href="/auth/logout") Logout
        div
            a(href="/auth/update/") Update


        div#div1
            h2 

        button.uk-button.uk-button-default Reload



block footer
    ol
        li Permalink: 
            a(href="/auth/update/") update

block scripts
    script.
        $(document).ready(function(){
            $("button").click(function(){
                $.ajax({url: "/auth/reload/", success: function(result){
                    //- $("#div1").html(result);
                    $("#div1").html("Success!");
            }});
        });
        });