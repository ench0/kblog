extends ../layout


block header
    p.abstract
        | #[strong Abstract.] Git update


block content


    div.uk-section.uk-section-xsmall.uk-text-justify(class="uk-column-1-1@m")
        div=git
        each message in messages
            div=message

        hr
        
        p(uk-margin)
            a.uk-button.uk-button-primary(href="/auth/logout") Logout
            a.uk-button.uk-button-secondary(href="/auth/update/") Update

            button.uk-button.uk-button-danger
                i(uk-icon="icon: ban; ratio: .75")
                |   Git Reset
            div(uk-drop="mode: click; pos: right-center")
                    a.uk-button.uk-button-danger(href="/auth/reset/") Confirm


        div#div1
            h2 

        button.uk-button.uk-button-default Reload



block footer
    ol
        li Permalink: 
            a(href="/auth/update/") update

block scripts
    script.
        $(document).ready(function(){
            $("button").click(function(){
                $.ajax({url: "/auth/reload/", success: function(result){
                    //- $("#div1").html(result);
                    $("#div1").html("Success!");
            }});
        });
        });