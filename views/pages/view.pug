extends ../layout

block header
    - headline = page.headline || ""
    p.headline=headline
    p.abstract
        | #[strong Abstract.] #{page.abstract} | Reading time &asymp; #{readtime}


block content

    div.uk-section.uk-section-small.uk-text-left

        if page.active
            span(uk-icon="icon: check")
            | 
        else
            span(uk-icon="icon: close") | 

block footer
    ol
        li Permalink: 
            a(href="/pages/"+page.slug) /#{page.slug}
        li Response time: #{ms}ms
        
block edit
    div
        a.uk-button.uk-button-default.uk-button-small.uk-position-bottom-left.uk-margin-left(href="/"+page.slug+"/edit?_csrf="+csrfToken)
            span(uk-icon="icon: pencil; ratio: .75")
            |  Edit
    div
        a.uk-button.uk-button-default.uk-button-small.uk-position-bottom-right.uk-margin-right(href="/new?_csrf="+csrfToken)
            span(uk-icon="icon: plus; ratio: .75")
            |  New