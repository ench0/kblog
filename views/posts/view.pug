extends ../layout

block header
    p.headline Written #{timestamp}
    p.abstract
        | #[strong Abstract.] #{post.abstract} | Reading time &asymp; #{readtime}
    if post.tags.length
        p.abstract
            | #[strong Keywords:]
            | 
            span
                each tag in post.tags
                    span.comma #[a(href="/tags/"+tag)=tag]
                    | 

block content

    div.uk-section.uk-section-small.uk-text-left

        if post.active
            span(uk-icon="icon: check")
            | 
        else
            span(uk-icon="icon: close") | 

block footer
    ol
        li Permalink: 
            a(href="/posts/"+post.slug) #{post.slug}
        li Response time: #{ms}ms
        
block edit
    div
        a.uk-button.uk-button-default.uk-button-small.uk-position-bottom-left.uk-margin-left(href="/posts/"+post.slug+"/edit?_csrf="+csrfToken)
            span(uk-icon="icon: pencil; ratio: .75")
            |  Edit